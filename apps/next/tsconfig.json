{
  "extends": ["@acme/tsconfig/base.json", "@acme/tsconfig/nativewind.json"],
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "jsxImportSource": "nativewind",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
